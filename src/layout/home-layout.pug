doctype html
html(lang='en-us')
    head
        include ../includes/meta.pug
    body
        block nav
            - var page = "home"
        block header
            include ../includes/header.pug
        main#main(role="main")
            block main_container
            .home
                .logo.text-center.p-4 
                    img.img-rounded.img-fluid.shadow-sm(src="/assets/images/teklynk-profile.jpg", alt="Teklynk logo")
                .container.pb-3.pt-3
                    if title
                        h1.underline #{title}
                    block content
        block footer
            include ../includes/footer.pug
        block script
            script(type='module', src='@/main.js')