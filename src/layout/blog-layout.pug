doctype html
html(lang=lang)
    head
        meta(charset='UTF-8')
        link(rel='icon', href='/assets/icons/favicon.ico')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        title
            block title
                | Teklynk
        meta(name='description', content=description)
        link(rel="canonical", href="https://www.teklynk.com")
        meta(property="og:locale" content="en_US")
        meta(property="og:type", content="website")
        meta(property="og:title" content=title)
        meta(property="og:url", content="https://www.teklynk.com")
        meta(property="og:description", content=description)
        meta(property="og:image", content="https://www.teklynk.com/assets/images/teklynk-profile.jpg")
    body
        block nav
            - var page = "blogs"
        block header
            include ../includes/header.pug
        main#main(role="main")
            block main_container
            .home
                .container.pb-3.pt-3
                    h1 #{title}
                    h2.small.muted.mb-5 Published on #{moment(date)}
                    block content
                        
        block footer
            include ../includes/footer.pug
        block script
            script(type='module', src='@/main.js')